<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sbchaoabg1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/pollresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="POLLING RESULT" />

    <Button
        android:id="@+id/casturvote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pollresult"
        android:layout_alignLeft="@+id/pollresult"
        android:layout_alignRight="@+id/pollresult"
        android:text="CAST MY VOTE" />
    
    <Button
        android:id="@+id/nominatemyself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/casturvote"
        android:layout_alignLeft="@+id/casturvote"
        android:layout_alignRight="@+id/casturvote"
        android:text="NOMINATE ME" />

</RelativeLayout>

