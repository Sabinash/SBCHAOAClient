<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sbchaoabg1"
    android:orientation="vertical"
     android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" 
     >

    <Button
        android:id="@+id/userbutton"
        style="@style/CustomStyleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text=" User DashBoard" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Welcome to DashBoard"
        android:textColor="#FF6633"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/adminbutton"
        style="@style/CustomStyleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userbutton"
        android:layout_alignLeft="@+id/userbutton"
        android:layout_alignRight="@+id/userbutton"
        android:layout_marginBottom="16dp"
        android:text="Admin DashBoard" />

</RelativeLayout>